{{#hasMixin}}{{mixinName}}() {
  background-image: url("../icons/{{{sprite}}}");
  background-size: rem({{spriteWidth}}) rem({{spriteHeight}});
  background-repeat: no-repeat;
}
{{#hasCommon}}.{{commonName}}
  {{mixinName}}();

{{/hasCommon}}{{/hasMixin}}{{^hasMixin}}{{#hasCommon}}.{{/hasCommon}}{{^hasCommon}}${{/hasCommon}}{{commonName}} {
  background-image: url("../images/{{{sprite}}}");
  background-size: rem({{spriteWidth}}) rem({{spriteHeight}});
  background-repeat: no-repeat;
}
{{/hasMixin}}

.icon {
  display: inline-block;
  vertical-align: middle;
  {{^hasCommon}}{{#hasMixin}}{{mixinName}}(); {{/hasMixin}}{{^hasMixin}}@extend ${{commonName}};{{/hasMixin}}
  {{/hasCommon}}
  {{#shapes}}
  {{#selector.shape}}{{#escape}}
  &.-{{expression}} { {{/escape}}{{^last}},{{/last}} {{/selector.shape}}
    background-position: rem({{position.absolute.x}}) rem({{position.absolute.y}});
    width: rem({{width.outer}});
    height: rem({{height.outer}});
  }
  {{/shapes}}
}
