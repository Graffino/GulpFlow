.select2-parent {
  position: relative;
}

.select2 {
  outline: 0;

  // Disable outline on all children elements
  & * {
    outline: 0;
  }

  &-container {
    @extend .h-z-index-2;
    width: 100% !important;
    background-color: $color-form-input-background;
    animation: fade-in 0.4s forwards;

    &--open {
      @extend .h-z-index-3;
    }

    &.-size-small {
      width: 100% !important;
      min-width: 0 !important;
    }

    .is-being-edited & {
      background-color: rgba($color-palette-4, 0.40);
    }

    // h5Validate error state class
    .ui-state-error ~ & {
      background-color: rgba($color-form-required-mark, 0.15);
      animation: shake 0.15s 2;
    }
  }

  &-selection {
    &__placeholder {
      font-size: $default-font-size;
      transition: transition-custom();
      transition-property: opacity;
    }

    &--default,
    &--single {
      height: auto !important;
      border: 0 !important;
      border-radius: 0 !important;
      background-color: transparent !important;
    }

    &__rendered {
      margin: 0;
      padding: rem(12) rem(40) rem(13) rem(16) !important;
      background-color: transparent !important;
      color: $color-text !important;
      font-size: $font-size-4;
      font-weight: 200;
      line-height: $line-height-4 !important;

      +below($large) {
        font-size: $default-font-size;
      }
    }

    &__arrow {
      top: 0 !important;
      right: 0 !important;
      display: block;
      width: rem(48) !important;
      height: rem(48) !important;
      margin: 0;
      padding: 0;
      background-image: url("../icons/dropdown-arrow.svg");
      background-position: center;
      background-repeat: no-repeat;

      b {
        display: none !important;
      }
    }
  }

  &-dropdown {
    top: 0;
    border: 0;
    border-radius: 0;
    background-color: darken($color-form-input-background, 3%);
    animation: fade-in 0.15s forwards;

    &--below {
      border-radius: 0;
    }
  }

  &-results {
    padding: rem(12) 0 rem(12);

    &__option {
      padding: rem(4) rem(14);
      background-color: transparent !important;
      color: $color-text !important;
      font-size: $font-size-4;
      font-weight: 200;
      line-height: rem(32) !important;
      transition: transition-custom();
      transition-property: background-color, color;
      transition-duration: 0.15s;

      +below($large) {
        font-size: $default-font-size;
      }

      &[aria-disabled="true"] {
        opacity: 0.3;
      }

      &[aria-selected="true"] {
        color: black !important;
      }

      &--highlighted {
        background-color: $color-primary !important;
        color: white !important;

        &[aria-selected="true"] {
          color: white !important;
        }
      }
    }
  }
}
