      }
      &-eight {
        move(8/12);
      }
      &-nine {
        move(9/12);
      }
      &-ten {
        move(10/12);
      }
      &-eleven {
        move(11/12);
      }
      &-twelve {
        move(12/12);
      }
    }
    &.-offset-left {
      &-one {
        move(-1/12);
      }
      &-two {
        move(-2/12);
      }
      &-three {
        move(-3/12);
      }
      &-four {
        move(-4/12);
      }
      &-five {
        move(-5/12);
      }
      &-six {
        move(-6/12);
      }
      &-seven {
        move(-7/12);
      }
      &-eight {
        move(-8/12);
      }
      &-nine {
        move(-9/12);
      }
      &-ten {
        move(-10/12);
      }
      &-eleven {
        move(-11/12);
      }
      &-twelve {
        move(-12/12);
      }
    }
  }
}
