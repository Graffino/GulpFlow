/**
 *  Extra Light, Ultra Light = 100
 *  Light, Thin = 200
 *  Book, Demi = 300
 *  Normal, Regular = 400
 *  Medium = 500
 *  SemiBold, Demibold = 600
 *  Bold = 700
 *  Black, ExtraBold, Heavy = 800
 *  Extra Black, Fat, Poster, UltraBlack = 900
 */


/**
 * FontName
 */

// Regular - 400
webfont("FontName", "font-name-regular", 400, normal);
// Bold - 700
webfont("FontName", "font-name-bold", 700, normal);
// Italic - 400
webfont("FontName", "font-name-italic", 400, normal);


/**
 * Fontfaces
 */

$sans-fontface               = "FontName Sans";
$serif-fontface              = "FontName Serif";
$cursive-fontface            = "FontName Cursive";

// Font-families stack
$sans-fontface-stack         = $sans-fontface, Helvetica, Arial, sans-serif;
$serif-fontface-stack        = $serif-fontface, Georgia, "Times New Roman", Times, serif;
$cursive-fontface-stack      = $cursive-fontface, cursive, sans-serif;

// System fontface stacks used when webfonts are not loaded
$system-sans-fontface-stack  = "Helvetica", "Helvetica Neue", "Arial", sans-serif;
$system-serif-fontface-stack = "Georgia", "Times New Roman", Times, serif;


/**
 * Headings
 */

// H1 - Home
$heading-huge-font-family   = $serif-fontface-stack;
$heading-huge-font-weight   = 700;
$heading-huge-font-size     = rem(60);
$heading-huge-line-height   = 1;

// H1 - Inner pages
$height-xl-font-family      = $serif-fontface-stack;
$height-xl-font-weight      = 700;
$height-xl-font-size        = rem(40);
$height-xl-line-height      = 1.2;

// H2
$heading-large-font-family  = $serif-fontface-stack;
$heading-large-font-weight  = 700;
$heading-large-font-size    = rem(30);
$heading-large-line-height  = 1.3;

// H3
$heading-normal-font-family = $serif-fontface-stack;
$heading-normal-font-weight = 700;
$heading-normal-font-size   = rem(24);
$heading-normal-line-height = 1.3;

// H4
$heading-medium-font-family = $serif-fontface-stack;
$heading-medium-font-weight = 700;
$heading-medium-font-size   = rem(18);
$heading-medium-line-height = 1.4;

// H5
$heading-small-font-family  = $serif-fontface-stack;
$heading-small-font-weight  = 700;
$heading-small-font-size    = rem(14);
$heading-small-line-height  = 1;

// H6
$heading-xsmall-font-family = $serif-fontface-stack;
$heading-xsmall-font-weight = 700;
$heading-xsmall-font-size   = rem(12);
$heading-xsmall-line-height = 1;


/**
 * Font sizes
 */

$font-size-huge     = rem(60);
$line-height-huge   = 1.3;

$font-size-xxl      = rem(40);
$line-height-xxl    = 1.3;

$font-size-xl       = rem(24);
$line-height-xl     = 1.3;

$font-size-large    = rem(20);
$line-height-large  = 1.3;

$font-size-normal   = rem(18); // body copy
$line-height-normal = 1.2;

$font-size-medium   = rem(16);
$line-height-medium = 1.2;

$font-size-small    = rem(14);
$line-height-small  = 1.2;

$font-size-xsmall   = rem(12);
$line-height-xsmall = 1;


/**
 * Default sizes
 */

$default-font-size           = rem(18);
$default-line-height         = 1.2;
