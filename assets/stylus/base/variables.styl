/**
 * Columns configuration
 */

$cols-nr                = 12;


/**
 * Container widths and heights
 */

$width-container        = 1110px; // Maximum width of non-fullwidth content
$width-content          = 1030px; // Width of the content container (without paddings)
$width-columns-gutter   = 10px; // Gutter width
$width-column           = (($width-content - (($cols-nr - 1) * $width-columns-gutter)) / $cols-nr); // Width of a column

$width-admin-sidebar    = 60px; // Width of the admin sidebar
$height-header          = 60px; // Height of the header element


/**
 * Font-faces
 */

// Font-faces
$sans-fontface          = "Times";
$serif-fontface         = "Georgia";
$cursive-fontface       = "Cursive";

// Font-families stack
$sans-stack             = $sans-fontface, Helvetica, Arial, sans-serif;
$serif-stack            = $serif-fontface, Georgia, "Times New Roman", Times, serif;
$cursive-stack          = $cursive-fontface, cursive, sans-serif;

// Headings default fontface
$heading-fontface       = $sans-fontface;

// Default text size
$default-text-size      = $body-copy-size;

// Headings font-weight
$font-weight-headings   = 200 200 200 200 200 200 200 200; // h6, h5, h4, h3, h2, h1, h1-xl, h1-xxl

// Headings font-weight
$transform-headings     = none none none none none none none none; // h6, h5, h4, h3, h2, h1, h1-xl, h1-xxl

// Border radius for rounded corners (default is 0)
$border-radius          = 4;


/**
 * Base font sizes for EM / REM
 */

$base-font-size         = 100%;
$base-font-size-px      = 16px;
$tablet-font-size-px    = 14px;


/**
 * Folders
 */

$url-images             = "../images";
$url-fonts              = "../fonts";


/**
 * Breakpoints
 */

$desktop                = 1366px;
$tablet                 = 1024px;
$mobile                 = 640px;

// Breakpoints scale for rupture (must match breakpoints above)
$scale                  = 0 640px 1024px;
