.-demo-font-sans,
.-demo-font-serif,
.-demo-font-cursive {
    &:after {
        position: relative;
        display: inline-block;
    }
}

.-demo-font-sans {
    &:after {
        content: string($sans-fontface);
    }
}

.-demo-font-serif {
    &:after {
        content: string($serif-fontface);
    }
}

.-demo-font-cursive {
    &:after {
        content: string($cursive-fontface);
    }
}

.headings-demo {
    .heading-demo {
        display: block;
        width: 80%;
        padding: inherit;
        font-size: $font-size-small;
        font-weight: 400;
        text-transform: none;
        letter-spacing: normal;

        &:after {
            float: right;
            display: inline-block;
            padding-left: rem($unit / 4);
            color: $color-text;
            text-align: right;
        }
    }

    .heading-example {
        margin-top: rem($unit * 2);
    }

    .heading-type {
        display: block;
        margin-bottom: rem($unit);
        color: $color-text;
        font-family: $serif-stack;
        text-transform: none;
        font-style: italic;
    }

    // Exporting headings meta info (e.g. sizes, leading, weight, etc.)
