/**
 * Baseline grid overlay
 */

html {
    &:after {
        content: string($unit);
        display: none;
    }
}

body {
    position: relative;
}

.grid {
    pointer-events: none;
    opacity: 0;
    z-index: 800;
    height: 100%;
    transition: transition-custom($property = opacity);

    &.is-visible {
        opacity: 1;
    }

    // baseline grid overlay
    &__baseline {
        pointer-events: none;
        position: absolute;
        top: 0;
        left: 0;
        z-index: 1000;
        width: 100%;
        height: 100%;
        background-image: linear-gradient(rgba($color-grid-baseline, 0.15) 1px, transparent 1px);
        background-position: 0 -1px;
        background-size: rem($unit) rem($unit);
        background-repeat: repeat;
    }

    // columns overlay
    &__columns {
        pointer-events: none;
        position: absolute;
        top: 0;
        left: 50%;
        z-index: 900;
        width: rem($width-container);
        height: 100%;
        margin-left: rem(-($width-container / 2));

        .column__twelfth {
            pointer-events: none;
            height: 100%;
            box-shadow: 1px 0 0 rgba($color-grid-baseline, 0.15), -1px 0 0 rgba($color-grid-baseline, 0.15);
        }
    }
}


