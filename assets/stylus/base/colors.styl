$default-color                      = $color-text;

// Backgrounds
$color-background                   = #FFFFFF;
$color-background-dark              = #031B21;

// Text
$color-text                         = #535353;

// Headings
$color-headings                     = #2C2A2A;

// Links
$color-link                         = $color-black;

// Blacks / Whites
$color-white                        = #FFFFFF;
$color-black                        = #000000;
$color-primary                      = #703B98;
$color-text-gray                    = #989A9A;

// Link colors
$color-link-default                 = #703B98;
$color-link-hover                   = $color-link-default;

// Content elements
$color-border                       = #E6E6E8;
$color-dropcap                      = #703B98;
$color-quote-content                = #333333;
$color-quote-author                 = #B3B3B3;

// Form elements
$color-form-border                  = #E6E6E8;
$color-form-border-hover            = #D6D6D8;
$color-form-border-focus            = #703B98;
$color-form-text                    = #312F38;
$color-form-text-focus              = #312F38;
$color-form-placeholder             = #312F38;

// Buttons
$color-button-background            = #703B98;
$color-button-background-hover      = darken($color-button-background, 20%);
$color-button-text                  = #FFFFFF;
$color-button-text-hover            = #FFFFFF;
$color-button-border                = $color-button-background;
$color-button-border-hover          = $color-button-background-hover;

// Form message boxes
$color-form-message-info            = #E8F8FF;
$color-form-message-warning         = #FFFCE3;
$color-form-message-error           = #FFEEEE;
$color-form-message-success         = #F3FEE1;


/**
 * Grid colors and variables
 */

$color-grid-baseline          = #2E7DFF;
