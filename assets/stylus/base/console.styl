/**
 * A kind of CSS console :-)
 */
body {
    &:before {
        content: "";
        pointer-events: none;
        opacity: 0;
        position: fixed;
        bottom: 0;
        left: 0;
        z-index: 100;
        width: 100%;
        padding: rem(12);
        background-color: rgba(black, 0.6);
        color: white;
        font-family: "Courier New", monospace;
        font-size: rem(14);
        transition: transition-custom($property = opacity);
    }

    &.-console {
        &:before {
            opacity: 1;
        }
    }
}

// output string to pseudo-console
console($log);
